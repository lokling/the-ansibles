[program:zookeeper]
#command=env JMX_PORT={{kafka_server_JMX_PORT}}
command=/usr/local/etc/kafka/bin/zookeeper-server-start.sh /usr/local/etc/kafka/config/zookeeper.properties
user={{kafka_user}}
autostart=true
autorestart=true
stopasgroup=true
startsecs=30
startretries=999
log_stdout=true
log_stderr=true
logfile=/var/log/kafka/broker.out
logfile_maxbytes=20MB
logfile_backups=10
